<!-- views/employeeDetails.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail of <%= employeeDetails.username %></title>

    <!-- Add your custom styles for the employee details page -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            width: 80%;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: #333;
        }

        h1 span {
            color: #007bff; /* Blue color for the username */
        }

        div.avatar-container {
            text-align: center;
            margin-bottom: 20px;
        }

        div.avatar-container img {
            max-width: 150px;
            height: auto;
            border-radius: 50%;
        }

        p {
            margin: 10px 0;
        }

        a {
            color: #333;
            text-decoration: none;
            display: block;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Detail of <span><%= employeeDetails.username %></span></h1>

        <!-- Display avatar -->
        <% if (employeeDetails.avatar) { %>
            <div class="avatar-container">
                <% if (employeeDetails.avatar.startsWith('/uploads/avatar')) { %>
                    <!-- Display the uploaded avatar -->
                    <img src="<%= employeeDetails.avatar %>" alt="User Avatar">
                <% } else { %>
                    <!-- Display the Base64-encoded avatar -->
                    <img src="data:image/png;base64, <%= employeeDetails.avatar %>" alt="User Avatar">
                <% } %>
            </div>
        <% } %>

        <!-- Display employee details -->
        <p><strong>Fullname:</strong> <%= employeeDetails.fullname %></p>
        <p><strong>Email:</strong> <%= employeeDetails.email %></p>
        <p><strong>Username:</strong> <%= employeeDetails.username %></p>
        <p><strong>Password:</strong> <%= employeeDetails.password %></p>

        <!-- Add a back button or link to return to the employee list -->
        <a href="/employeeList">Back to Employee List</a>
    </div>

    <!-- Your other scripts if any -->
</body>
</html>
